{
  "name": "mcp-hot-reload",
  "version": "1.3.0",
  "description": "Hot-reload development tool for MCP (Model Context Protocol) servers with session preservation",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-hot-reload": "dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run build && npm run test:unit && vitest run --config vitest.config.e2e.ts",
    "test:unit": "vitest run",
    "test:e2e": "npm run clean && npm run build && vitest run --config vitest.config.e2e.ts",
    "test:watch": "vitest",
    "test:debug": "cross-env LOG_LEVEL=debug vitest run --reporter=verbose",
    "test:silent": "cross-env LOG_LEVEL=silent vitest run",
    "test:detect-hanging": "cross-env DEBUG_HANGING=true vitest run --config vitest.config.e2e.ts --reporter=verbose",
    "test:force-exit": "cross-env FORCE_EXIT=true DEBUG_HANGING=true vitest run --config vitest.config.e2e.ts",
    "test:coverage": "npm run test:unit:coverage && npm run test:e2e:coverage",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e:coverage": "vitest run --config vitest.config.e2e.ts --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublish": "npm run clean && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "development",
    "hot-reload",
    "proxy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/micromatch": "^4.0.9",
    "chokidar": "^4.0.3",
    "micromatch": "^4.0.8",
    "pino": "^9.10.0",
    "pino-pretty": "^13.1.1"
  }
}
